# Application Settings
APP_NAME=GraphRAG System
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8002
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Neo4j Settings
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30

# Chroma Settings
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./chroma_data

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=300

# RabbitMQ Settings
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Celery Settings
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# PostgreSQL Settings (for Chroma metadata)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=chroma

# Gemini API Settings
GEMINI_API_KEY=your-api-key-here
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_RATE_LIMIT_PER_MINUTE=60

# Visualizer execution safety
VISUALIZER_EXECUTION_ENABLED=true
VISUALIZER_EXECUTION_ALLOW_IN_PRODUCTION=true
VISUALIZER_MAX_CODE_CHARS=50000
VISUALIZER_ISOLATION_MODE=subprocess

# Upload Settings
MAX_UPLOAD_FILES=10000
MAX_FILE_SIZE_MB=100
UPLOAD_TEMP_DIR=./uploads

# Processing Settings
PARSING_BATCH_SIZE=100
EMBEDDING_BATCH_SIZE=50

# Query Settings
DEFAULT_SEARCH_TOP_K=20
DEFAULT_SIMILARITY_THRESHOLD=0.7
DEFAULT_TOKEN_BUDGET=8000
QUERY_TIMEOUT_SECONDS=30

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# JWT Settings
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
